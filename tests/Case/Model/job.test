<?php

App::import('Model', 'Cloudprint.Job');

class JobTestCase extends CakeTestCase {
    function getJobsTest() {
        $this->Job = & ClassRegistry::init('Job');
        $result = $this->Job->getJobs();
        $this->assertEqual($result['success'], true);
    }

    function addJobTest() {
        $this->Job = & ClassRegistry::init('Job');
        $file = new File('./testfile.html');
    }

    function incorrectMimeTypeTest() {
        $this->Job = & ClassRegistry::init('Job');
        $this->expectError('BadMimeTypeException');
        //use csv file
        $file = new File("./testfile.csv");
    }

    function fileNotFoundTest() {
        $this->Job = & ClassRegistry::init('Job');
        //create file handle
        $file = new File(TMP . 'noexist.html', false);
    }

}

?>